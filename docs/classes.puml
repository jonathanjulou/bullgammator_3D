    VCS --|> Operation
    VRS --|> Operation
    SN --|> OperationWithPreShift
    ZB --|> Operation
    KB --|> Instruction
    BD --|> Instruction
    IL --|> Operation
    MR --|> OperationWithPreShift
    DR --|> OperationWithPreShift
